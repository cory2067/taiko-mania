<head>
  {{> head}}
</head>

<style>
.map-seg {
  cursor: pointer;
}
.map-seg:hover {
  background-color: #f6f6f8;
}
.fixed {
  position: fixed;
}
#main-header {
  text-align: center;
  font-size: 2.5em;
}
#map-select {
  overflow-y: scroll;
  height: calc(100% - 6.2em);
}
</style>

<script>
function play(setId, diffId) {
  window.location = `/play/${setId}/${diffId}`;
}
</script>

<body>
  <div class="ui segment">
      <h1 class="ui header" id="main-header">webtaiko</h1>

      <div class="ui segment">
        <div class="ui two column very relaxed grid">
          <div class="column">
            <h1>hewwo</h1>
            <h1>meh</h1>
          </div>
          <div class="column" id="map-select">

            {{#each maps}}
            <div class="ui {{this.diffColor}} segment map-seg"
                 onclick="play({{this.setId}},{{this.diffId}})">
              <div class="ui header">
                {{this.title}}
                <div class="sub header"> {{this.artist}} // map by {{this.creator}} </div>
              </div>
            
              <div class="ui big header">
                {{this.diff}} </span><span class="ui {{this.diffColor}} big circular label">
                <i class="star icon"></i> 
                {{this.stars}}
              </div>
            </div>
            {{/each}}

          </div>
        </div>
        <div class="ui vertical divider"></div>
      </div>

  </div>
</body>
